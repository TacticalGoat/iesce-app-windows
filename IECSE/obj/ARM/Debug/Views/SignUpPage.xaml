<Page
    x:Class="IECSE.Views.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IECSE.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF3598DB">

        <ScrollViewer  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0">
                <TextBlock x:ConnectionId='2' x:Name="fullnameBox" Text="Sign Up" FontSize="30.667" Margin="0" d:LayoutOverrides="LeftMargin, RightMargin, TopPosition, BottomPosition" HorizontalAlignment="Center" Width="250" Height="40" Foreground="#FFF7F1F1" UseLayoutRounding="True"/>
                <TextBox x:ConnectionId='3' x:Name="textBox" TextWrapping="Wrap" Text="" Width="250" Height="40" PlaceholderText="Full Name" Margin="10"/>
                <TextBox x:ConnectionId='4' x:Name="EmailBox" PlaceholderText="email:someone@exmaple.com" Margin="10" BorderBrush="{x:Null}" Height="40" Width="250"/>
                <TextBox x:ConnectionId='5' x:Name="MobileBox" PlaceholderText="Mobile" Margin="10" BorderBrush="{x:Null}" Width="250" Height="40"/>
                <TextBox x:ConnectionId='6' x:Name="RegistrationNoBox" PlaceholderText="Registration Number" Margin="10" BorderBrush="{x:Null}" Width="250" Height="40"/>
                <TextBox x:ConnectionId='7' x:Name="UsernameBox" PlaceholderText="Choose Username" Margin="10" BorderBrush="{x:Null}" Height="40" Width="246"/>
                <PasswordBox x:ConnectionId='8' x:Name="PasswordBox1" PlaceholderText="Enter Password" Margin="10" BorderBrush="{x:Null}" Width="250" Height="40"/>
                <PasswordBox x:ConnectionId='9' x:Name="PasswordBox2" PlaceholderText="Confirm Password" Margin="10" BorderBrush="{x:Null}" Width="250" Height="40"/>
                <HyperlinkButton x:ConnectionId='10' x:Name="BackButton" Content="Already Have Account?" HorizontalAlignment="Center"  VerticalAlignment="Stretch" d:LayoutOverrides="LeftMargin, RightMargin" Foreground="#FFF9F9F9" Height="32" HorizontalContentAlignment="Left" Width="248"                         />
            </StackPanel>
        </ScrollViewer>
        <Button x:ConnectionId='1' x:Name="RegisterButton_Copy" HorizontalAlignment="Stretch" Content="&#xE10B;"  VerticalAlignment="Bottom"  Foreground="#FFF7F5F5" FontFamily="Segoe MDL2 Assets" Height="39" FontSize="29.333"                                  />
    </Grid>
</Page>

